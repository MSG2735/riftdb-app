{
  "name": "riftdb",
  "version": "1.0.1",
  "description": "RiftDB League of Legends Overlay",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "build": "tsc -p tsconfig.electron.json && vite build",
    "package": "npm run build && electron-builder",
    "make-exe": "npm run build && electron-builder --win",
    "start-transparent": "electron . --enable-transparent-visuals --disable-gpu"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@shadcn/ui": "^0.0.4",
    "axios": "^1.6.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.503.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.0.2",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "build": {
    "appId": "com.riftdb.app",
    "productName": "RiftDB",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "assets/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "public",
        "to": "public"
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
